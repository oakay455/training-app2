<div class="mini-title">会員情報編集</div>

<%= form_with model:@customer do |f| %>

 <div class="field">
  名前
  （姓）<% f.label :first_name %>
  <%= f.text_field :first_name %>
  （名）<% f.label :last_name %>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  フリガナ
  （セイ）<% f.label :first_name_kana %>
  <%= f.text_field :first_name_kana %>
  （メイ）<% f.label :last_name_kana %>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    郵便番号
    <% f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    住所
    <% f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    電話番号（ハイフンなし）
    <% f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="field">
    メールアドレス
    <% f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>